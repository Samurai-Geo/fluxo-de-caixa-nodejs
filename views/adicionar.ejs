<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Adicionar Lançamento</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>

<body>
  <h1>Adicionar Novo Lançamento</h1>
  <hr>
  <form action="/cadastrar" method="POST">
    <div>
      <label for="tipo">Tipo:</label>
      <input type="text" class="form-control" id="tipo" name="tipo" required>
    </div>
    <div>
      <label for="valor">Valor:</label>
      <input type="number" class="form-control" id="valor" name="valor" step="0.01" required>
    </div>
    <div>
      <label for="status">Status:</label>
      <select class="form-select" id="status" name="status" required>
        <option value="0">Receita</option>
        <option value="1">Despesa</option>
      </select>
    </div>
    <hr>
    <div>
      <button class="btn btn-primary" type="submit">Cadastrar</button>
    </div>
  </form>
  <a href="/">Voltar para a Página Inicial</a>

  <script>
    const statusSelect = document.getElementById('status');
    const valorInput = document.getElementById('valor');

    statusSelect.addEventListener('change', () => {
      const status = statusSelect.value;
      const valorAtual = parseFloat(valorInput.value);

      // Se "Despesa" for selecionada e o valor for positivo, torna-o negativo
      if (status === '1' && valorAtual > 0) {
        valorInput.value = -valorAtual;
      }

      // Se "Receita" for selecionada e o valor for negativo, torna-o positivo
      if (status === '0' && valorAtual < 0) {
        valorInput.value = Math.abs(valorAtual);
      }
    });
  </script>
</body>

</html>